.spotify-recently-played{margin-bottom:24px}.spotify-recent-items{display:flex;overflow-x:auto;gap:12px;padding-bottom:12px}.spotify-recent-item{min-width:140px;max-width:140px;background:#181818;border-radius:8px;padding:12px;transition:background .3s;cursor:pointer}.spotify-recent-item:hover{background:#282828}.spotify-recent-item-img{width:100%;aspect-ratio:1;border-radius:4px;margin-bottom:8px;box-shadow:0 4px 8px rgba(0,0,0,.3);object-fit:cover}.spotify-recent-item-title{color:#fff;font-size:13px;font-weight:700;margin-bottom:3px;white-space:nowrap;overflow:hidden;text-overflow:ellipsis}.spotify-recent-item-subtitle{color:#b3b3b3;font-size:11px;white-space:nowrap;overflow:hidden;text-overflow:ellipsis}
